<div class="row sign-up">
	<div class="col-md-7 center">
		<p class="caption small text-right">Already have an account? <a class="cap text-blue" href="/users/sign_in">sign in</a></p>

		<h4 class="text-blue sign-up caption text-center">thank you for choosing to adopt, let's get started. <br><span class="caption small">We need to create and account for you.</span></h4>

		<div class="ruler"></div>
		<div class="clearfix"></div>
		
		<div class="controls">
			<p class="pull-right">
				Step <span class="current">x</span> of <span class="total">3</span>
				<a class="left btn btn-info" href="#sign-up-carousel" data-slide="prev">
		    Previous
		  </a>
		  <a class="right btn btn-primary" href="#sign-up-carousel" data-slide="next">
		  	Next
		  </a>

			</p>
			<!-- Controls -->
		</div>
		</div>
	</div>

	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-inputs">

      <div class="login-info">
        <%= f.input :email, required: true %>
        <%= f.input :password, required: true %>
        <%= f.input :password_confirmation, required: true %>
        
        <div class="next-button btn btn-default" onclick="$('.login-info').hide(); $('.user-info').show();">Next</div>   
      </div>     

      <div class="user-info" style="display: none">
        <%= f.input :address1, required: true %>
        <%= f.input :address2, required: false %>
        <%= f.input :locality, required: true %>
        <%= f.input :state, required: true %>
        <%= f.input :zip, required: true %>
        <%= f.input :country, required: true %>

        <%= f.input :gender, required: true, collection: ['Male', 'Female'] %>
        <%= f.input :dob, required: true, start_year: 1900 %>

        <div class="prev-button btn btn-default" onclick="$('.user-info').hide(); $('.login-info').show();">Prev</div>      
        <div class="next-button btn btn-default" onclick="$('.user-info').hide(); $('.payment-info').show();">Next</div>
      </div>

      <div class="payment-info" style="display: none">
        Payment Info

        <div class="prev-button btn btn-default" onclick="$('.payment-info').hide(); $('.user-info').show();">Prev</div>      
        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
        </div>

      </div>
    </div>

	<% end %>

	<%= render "devise/shared/links" %>
</div>

<% content_for :js do %>
<script type="text/javascript">
	$(document).ready(function(){
		$('.carousel').carousel({
			wrap: false
		});
	});
</script>

<% end %>
