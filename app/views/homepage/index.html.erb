<h1>Home</h1>

<p>
  <% if current_user && current_user.admin? %>
    <a href="/recipients">Recipients</a>
  <% end %>
</p>

<table class="table">
  <thead>
   <tr>
     <th>Name</th>
     <th>Family Members</th>
   </tr>
  </thead>
  <tbody>
    <% @families.each do |recipient| %>
      <tr>
        <td><%= "#{recipient.first_name} #{recipient.last_name}" %></td>
        <td><%= recipient.family_members.count %></td>
      </tr>
    <% end %>    
  </tbody>
</table>