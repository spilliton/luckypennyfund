<div class="row sign-up">
	<div class="col-md-7 center">
		<p class="caption small text-right">Already have an account? <a class="cap text-blue" href="/users/sign_in">sign in</a></p>

		<h4 class="text-blue sign-up caption text-center">thank you for choosing to adopt, let's get started. <br><span class="caption small">We need to create and account for you.</span></h4>

		<div class="ruler"></div>
		<div class="clearfix"></div>
		
	</div>

	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
	  <%= f.error_notification %>
    <div class="form-inputs">

      <div class="login-info">
        <div class="form-group">
          <div class="col-sm-1"></div>
          <div class="col-sm-4">
            <%= f.input :first_name, required: true %>
          </div>
          <div class="col-sm-2"></div>
          <div class="col-sm-4 ">
            <%= f.input :last_name, required: true %>
          </div>
          <div class="col-sm-1"></div>
        </div>
        <div class="form-group">
          <div class="col-sm-1"></div>
          <div class="col-sm-8">
            <%= f.input :email, required: true %>
          </div>
          <div class="col-sm-3"></div>
        </div>
        <div class="form-group">
          <div class="col-sm-1"></div>
          <div class="col-sm-4">
            <%= f.input :password, required: true %>
          </div>
          <div class="col-sm-2"></div>
          <div class="col-sm-4">
            <%= f.input :password_confirmation, required: true %>
          </div>
          <div class="col-sm-1"></div>
        </div>

        <div class="form-group">
          <div class="col-sm-7"></div>
          <div class="col-sm-2">STEP 1 OF 3</div>
          <div class="col-sm-2 next-button btn btn-default" onclick="$('.login-info').hide(); $('.user-info').show();">Next</div>
          <div class="col-sm-1"></div>
        </div>
      </div>     

      <div class="user-info" style="display: none">
        <div class="form-group">
          <div class="col-sm-1"></div>
          <div class="col-sm-4">
            <%= f.input :gender, required: true, collection: ['Male', 'Female'] %>
          </div>
          <div class="col-sm-2"></div>
          <div class="col-sm-4">
            <%= f.input :dob, required: true, start_year: 1900 %>
          </div>
          <div class="col-sm-1"></div>

        </div>
        <div class="form-group">
          <div class="col-sm-1"></div>
            <div class="col-sm-10">
              <%= f.input :address1, required: true %>
            </div>
          <div class="col-sm-1"></div>
        </div>
        <div class="form-group">
          <div class="col-sm-1"></div>
            <div class="col-sm-10">
              <%= f.input :address2, required: false %>
            </div>
          <div class="col-sm-1"></div>        
        </div>
        <div class="form-group">
          <div class="col-sm-1"></div>
          <div class="col-sm-2">
            <%= f.input :locality, required: true %>
          </div>
          <div class="col-sm-1"></div>
          <div class="col-sm-2">
            <%= f.input :state, required: true %>
          </div>
          <div class="col-sm-1"></div>
          <div class="col-sm-2">
            <%= f.input :zip, required: true %>
          </div>
          <div class="col-sm-1"></div>
        </div>

        <%= f.input :country, required: true %>

        <div class="form-group">
          <div class="col-sm-5"></div>
          <div class="col-sm-2">STEP 1 OF 3</div>
          <div class="col-sm-2 prev-button btn btn-default" onclick="$('.user-info').hide(); $('.login-info').show();">Prev</div>
          <div class="col-sm-2 next-button btn btn-default" onclick="$('.user-info').hide(); $('.payment-info').show();">Next</div>
          <div class="col-sm-1"></div>
        </div>
      </div>

      <div class="payment-info" style="display: none">
        Payment Info

        <div class="prev-button btn btn-default" onclick="$('.payment-info').hide(); $('.user-info').show();">Prev</div>      
        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
        </div>

      </div>
    </div>

	<% end %>

	<%= render "devise/shared/links" %>
</div>

<% content_for :js do %>
<script type="text/javascript">
	$(document).ready(function(){
		$('.carousel').carousel({
			wrap: false
		});
	});
</script>

<% end %>
